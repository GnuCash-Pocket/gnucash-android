<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.common.FormActivity">

    <LinearLayout
        android:id="@+id/imbalance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dialog_padding"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/imbalance_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/label_imbalance"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/imbalance_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="$200" />
    </LinearLayout>

    <include
        android:id="@+id/imbalance_divider"
        layout="@layout/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imbalance_layout"
        app:layout_constraintTop_toBottomOf="@id/imbalance_layout" />

    <ScrollView
        android:id="@+id/split_list_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/calculator_keyboard"
        app:layout_constraintTop_toBottomOf="@id/imbalance_divider">

        <LinearLayout
            android:id="@+id/split_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:orientation="vertical">
            <!-- Split edit views will be added here at runtime-->
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/calculator_keyboard"
        layout="@layout/kbd_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>